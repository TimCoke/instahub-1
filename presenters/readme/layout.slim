    link href="/style/main.css" rel="stylesheet" type="text/css" media="screen"
  body
    header
      section.topbar.topbar-inner
        .container
          a class="brand" href="#" Instahub
          ul.nav
            li
              a href="http://github.com/#{slug}" = slug
    article.container-fluid
      .sidebar
        == slim :sidebar, locals: { build: build, license: license }
      .content
        == yield
